<h2>Listing Order for</h2>
<h2><%= @order.order_uuid %></h2>
<h2>(<%= number_to_currency(@order.order_total, :unit => "€" )%>)</h2>

<table id="rounded-corner" >
<thead>
  <tr>
    <th scope="col" class="rounded-company">Name</th>
	<th>Count</th>
    <th>Price</th>
    <th scope="col" class="rounded-q4">Place</th>
  </tr>
</thead>
<tfoot>
<tr>
	<td colspan="3" class="rounded-foot-left"><em>The above data were fictional and made up, please do not sue me</em></td>
	<td class="rounded-foot-right">&nbsp;</td>
</tr>
</tfoot>

<% @order.order_details.each do |order_detail| %>
<tbody>
  <tr>
    <td><%= order_detail.food_name %></td>
    <td>x<%= order_detail.food_count %></td>
    <td><%= number_to_currency(order_detail.food_price, :unit => "€") %></td>
    <td><%= order_detail.food_place %></td>
  </tr>
</tbody>
<% end %>
</table>

<%= link_to 'Edit', edit_order_path(@order) %> | 
<%= link_to 'Back', orders_path %>
