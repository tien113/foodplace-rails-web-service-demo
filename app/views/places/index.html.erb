<% provide(:title, 'Places') %>
<h1>Places</h1>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Name</th>
			<th>Latitude</th>
			<th>Longitude</th>
			<th>Address</th>
			<th>Phone number</th>
			<th>Email</th>
			<th>Image url</th>
		<% if signed_in? %>
			<th>Actions</th>
		<% end %>	
		</tr>
	</thead>
	<tbody>
	<% @places.each do |p| %>
	<tr>
		<td><%= p.place_name %></td>
		<td><%= p.place_lat %></td>
		<td><%= p.place_log %></td>
		<td><%= truncate(p.place_address, :length => 15) %></td>
		<td><%= truncate(p.place_phone_number, :length => 8) %></td>
		<td><%= truncate(p.place_email, :length => 15) %></td>
		<td><%= truncate(p.place_image_url, :length => 10) %></td>
		<% if signed_in? %>
		<td>
			<%= link_to 'Show', p, class: "btn btn-small btn-info" %>
		    <%= link_to 'Edit', edit_place_path(p), class: "btn btn-small btn btn-warning" %>
		    <%= link_to 'Destroy', p, confirm: 'Are you sure?', method: :delete, class: "btn btn-small btn-danger" %>
		</td>
		<% end %>
	</tr>
	<% end %>
	</tbody>
</table>

<% if signed_in? %>
	<%= link_to 'Create new place', new_place_path, class: "btn btn-large btn-primary" %>
<% end %>