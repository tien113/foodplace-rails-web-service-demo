<% provide(:title, 'Sign in') %>
<p id="notice"><%= notice %></p>
<% if !current_user %>
<h1>Sign in</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    Email<br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    Password<br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
	<%= submit_tag "Sign In" %>
  </div>
<% end %>
<% end %>

<br />

