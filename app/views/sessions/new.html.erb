<% if !signed_in? %>
	<% provide(:title, 'Sign in') %>
	
	<h1>Sign in</h1>

	<div class="row">
		<div class="span4 offset4">
			<%= form_for(:session, url: sessions_path) do |f| %>
				<%= render 'fields', f: f %>
				<%= f.submit "Sign in", class: "btn" %>
			<% end %>
		</div>
	</div>
<% else%>

	<% provide(:title, 'Welcome') %>
	<h1>Welcome to Food Place web service</h1>
<% end %>